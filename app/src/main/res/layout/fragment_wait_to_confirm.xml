<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تا زمانی که مدیر شما را تایید نکند نمی توانید از این اپلیکیش استفاده کنید لطفا دکمه خروج را فشار دهید و زمانی که مدیر شما را تایید کرد وارد اپلیکیشن شوید"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:lineSpacingExtra="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_shaar"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="شار"
                    android:textColor="@color/colorWhite"
                    android:textSize="28sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/btn_Done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Exit"
                    android:background="@drawable/btn_page_success"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textSize="16sp"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>