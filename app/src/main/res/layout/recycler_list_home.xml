<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="30">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Special"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Special"
                    android:background="@color/colorRed"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorGrey_Darken_4"
                    android:layout_alignParentLeft="true">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="15dp"
                        android:src="@drawable/camera"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/CountImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="18"
            android:orientation="vertical"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/Recycler_ListHome_lbl_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1,500,000,000"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/Recycler_ListHome_lbl_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="سنندج،بهاران"
                android:textColor="@color/colorBlack"
                android:gravity="right"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/Recycler_ListHome_lbl_Discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="فروش ففآپارتمان 83 متری جنب ..."
                android:gravity="right"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@color/colorGray"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/Recycler_ListHome_lbl_Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="55 دقیقه پیش"
                android:textColor="@color/colorGray"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="14sp"
                android:textDirection="rtl"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/imgBed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bed" />

                    <TextView
                        android:id="@+id/Recycler_ListHome_lbl_CountRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_marginRight="5dp"
                        android:textSize="14sp"
                        android:layout_toLeftOf="@+id/imgBed"
                        android:layout_alignBaseline="@id/imgBed"/>

                    <TextView
                        android:id="@+id/Recycler_ListHome_lbl_Aria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="83 مترمربع"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:singleLine="true"
                        android:paddingRight="15dp"
                        android:layout_marginBottom="5dp"/>
                </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>