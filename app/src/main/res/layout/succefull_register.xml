<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="به شار خوش آمدید"
                    android:textColor="@color/colorWhite"
                    android:textSize="26sp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="به اپلیکشن مشاور املاک شار در سنندج خوش آمدید جهت شروع کار با اپلیکیشن روی دکمه زیر کلیک نمایید"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:lineSpacingExtra="5dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_shaar"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="شار"
                    android:textColor="@color/colorWhite"
                    android:textSize="28sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/btn_Done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="صفحه اصلی"
                    android:background="@drawable/btn_page_success"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textSize="16sp"/>

            </LinearLayout>

        </RelativeLayout>

</RelativeLayout>